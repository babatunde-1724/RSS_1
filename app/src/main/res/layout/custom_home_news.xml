<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_news_background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/newsThumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_thunmbnail_height"
        android:scaleType="fitXY"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/twen_dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_horizontal" />
    <TextView
        android:id="@+id/textViewabstract"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:gravity="fill_horizontal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_published"
            android:textColor="@color/colorPrimaryText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewdate"
            android:layout_above="@+id/textViewabstract"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="0"
        android:id="@+id/textviewurl"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true" />
</LinearLayout>